<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Assets\poshblox.ico</ApplicationIcon>
    <RootNamespace>PoSHBlox</RootNamespace>
    <AssemblyName>PoSHBlox</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.3.10" />
    <PackageReference Include="Avalonia.Desktop" Version="11.3.10" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.3.10" />
    <PackageReference Include="FluentAvaloniaUI" Version="2.5.0" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Templates\**\*.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Scripts\*.ps1" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\poshblox-icon-512.png" />
    <AvaloniaResource Include="Assets\poshblox.ico" />
    <AvaloniaResource Include="Assets\Fonts\JetBrainsMono-Regular.ttf" />
    <AvaloniaResource Include="Assets\Fonts\JetBrainsMono-Bold.ttf" />
    <AvaloniaResource Include="Assets\Fonts\JetBrainsMono-SemiBold.ttf" />
  </ItemGroup>

</Project>
